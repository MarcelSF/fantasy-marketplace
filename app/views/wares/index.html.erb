<h1>Browse our legendary wares!</h1>

<div class="card-grid">
  <% @wares.each do |ware|  %>
    <div class="card">
      <%= link_to ware_path(ware) do %>
        <div class="card-image">
          <%= cl_image_tag ware.photos.first.key, height: 320, width: 298, crop: :fill if ware.photos.any?%>
        </div>
      <% end %>
      <div class="card-content">
        <h3><%= ware.name %></h3>
        <p><%= ware.description %></p>
        <p><%= ware.price %></p>
      </div>
    </div>
  <% end %>
</div>

